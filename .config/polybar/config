[bar/statusbar]
monitor = ${env:MONITOR:}
background = #415f78
bottom = true
height = 20
font-0 = "Hack:size=13;4"
font-1 = "Noto Color Emoji:size=10:style=Regular:scale=13;3"
modules-left = i3
modules-center = date
modules-right = battery alsa network cpu memory filesystem
tray-position = right
separator = |
separator-foreground = #db03fc

[module/alsa]
type = internal/alsa
format-volume = 🔊<label-volume>
label-muted = 🔇%percentage%%

[module/network]
type = internal/network
interface = wlp2s0
label-connected = 📶%local_ip%
label-disconnected = Wireless:NONE
label-disconnected-background = #e60053

[module/battery]
type = internal/battery
label-charging = 🔌%percentage%%
label-discharging = 🔋%percentage%%

[module/cpu]
type = internal/cpu
label = ⚙️%percentage%%

[module/memory]
type = internal/memory
label = 💾%percentage_used%%(%gb_used%/%gb_total%)

[module/filesystem]
type = internal/fs
mount-0 = /home
label-mounted = 💽%percentage_used%%(%used%/%total%)
fixed-values = true
spacing = 1

[module/date]
type = internal/date
; Seconds to sleep before updates
interval = 1.0
; Show current date and time
date = %H:%M:%S %Y-%m-%d %Z 

[module/i3]
type = internal/i3
; Only show workspaces present on this output
pin-workspaces = true
; Do not allow scrolling or clicking on the bar
; to switch workspaces
enable-click = true
enable-scroll = false
; i3 modes style
label-mode = %mode%
label-mode-background = #e60053
; Focused workspace style
label-focused = %name%
label-focused-background = #3f3f3f
; Separator in between workspaces
label-separator = |
label-separator-foreground = #db03fc
